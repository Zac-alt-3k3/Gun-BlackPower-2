    Title = "----------------------",
    Text = "üü¢ Ch·ªâ Torch ‚û°Ô∏è Xanh l√°;üî¥Ch·ªâ Axe    ‚û°Ô∏è ƒê·ªè",  
   Duration = 5
})

-- K·∫øt n·ªëi v·ªõi Heartbeat
RunService.Heartbeat:Connect(function()
    
    wait(WaitTime) 
    pcall(executeAttack)
    wait(WaitTime)
    pcall(updateHighlights)
end)

