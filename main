local player = game:GetService("Players").LocalPlayer
local RunService = game:GetService("RunService")

-- Kiểm tra script đã chạy chưa
if _G.CombatSystemRunning then
    warn("Hệ thống đã được kích hoạt trước đó")
print("██╔══╝    ██╔██╗ ██╔═══╝ ██║      ██║    ██║  ██║    ██║      ╚════██")
